<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard - Billings</title>
    <link rel="stylesheet" href="css/styles.css">
    <style>
        .admin-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 20px;
            margin-top: 30px;
        }

        .admin-card {
            background: white;
            border-radius: 12px;
            padding: 25px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
            transition: transform 0.2s, box-shadow 0.2s;
            cursor: pointer;
            text-decoration: none;
            color: inherit;
            display: block;
        }

        .admin-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
        }

        .admin-card-header {
            display: flex;
            align-items: center;
            margin-bottom: 15px;
        }

        .admin-card-icon {
            font-size: 2.5em;
            margin-right: 15px;
        }

        .admin-card-title {
            font-size: 1.4em;
            font-weight: 600;
            color: #333;
        }

        .admin-card-description {
            color: #666;
            line-height: 1.5;
            margin-bottom: 15px;
        }

        .admin-card-stats {
            display: flex;
            gap: 15px;
            padding-top: 15px;
            border-top: 1px solid #eee;
        }

        .admin-stat {
            flex: 1;
        }

        .admin-stat-value {
            font-size: 1.8em;
            font-weight: 700;
            color: #667eea;
        }

        .admin-stat-label {
            font-size: 0.85em;
            color: #999;
            margin-top: 2px;
        }

        .admin-header {
            background: white;
            border-radius: 12px;
            padding: 30px;
            margin-bottom: 30px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        }

        .admin-header h1 {
            color: #667eea;
            margin-bottom: 10px;
        }

        .admin-badge {
            display: inline-block;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 5px 15px;
            border-radius: 20px;
            font-size: 0.85em;
            font-weight: 600;
            margin-left: 10px;
        }

        .quick-actions {
            display: flex;
            gap: 10px;
            margin-top: 20px;
            flex-wrap: wrap;
        }

        .action-button {
            padding: 10px 20px;
            border-radius: 8px;
            border: 2px solid #667eea;
            background: white;
            color: #667eea;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.2s;
            text-decoration: none;
            display: inline-block;
        }

        .action-button:hover {
            background: #667eea;
            color: white;
        }
    </style>
</head>
<body>
    <!-- Navigation Bar -->
    <nav class="navbar">
        <div class="nav-container">
            <a href="index.html" class="nav-brand">Billings Admin</a>
            <div class="nav-links">
                <a href="admin.html" class="nav-link active">Dashboard</a>
                <a href="admin-questions.html" class="nav-link">Questions</a>
                <a href="admin-achievements.html" class="nav-link">Achievements</a>
                <a href="dashboard.html" class="nav-link">User View</a>
            </div>
            <div class="nav-actions">
                <button id="nav-logout" class="button button-danger-outline">Logout</button>
            </div>
        </div>
    </nav>

    <div class="container">
        <!-- Admin Header -->
        <div class="admin-header">
            <h1>üõ†Ô∏è Admin Dashboard <span class="admin-badge" id="admin-badge">ADMIN</span></h1>
            <p>Welcome to the admin control panel. Manage questions, users, and achievements.</p>
            <div class="quick-actions">
                <a href="admin-questions.html?action=create" class="action-button">+ Add Question</a>
                <a href="admin-achievements.html?action=create" class="action-button">+ Create Achievement</a>
                <button id="refresh-stats" class="action-button">üîÑ Refresh Stats</button>
            </div>
        </div>

        <!-- Admin Cards Grid -->
        <div class="admin-grid">
            <!-- Question Management -->
            <a href="admin-questions.html" class="admin-card">
                <div class="admin-card-header">
                    <div class="admin-card-icon">üìù</div>
                    <div class="admin-card-title">Question Bank</div>
                </div>
                <div class="admin-card-description">
                    Manage CompTIA practice questions. Create, edit, and delete questions across all exam types.
                </div>
                <div class="admin-card-stats">
                    <div class="admin-stat">
                        <div class="admin-stat-value" id="total-questions">-</div>
                        <div class="admin-stat-label">Total Questions</div>
                    </div>
                    <div class="admin-stat">
                        <div class="admin-stat-value" id="total-exams">-</div>
                        <div class="admin-stat-label">Exam Types</div>
                    </div>
                </div>
            </a>

            <!-- User Management -->
            <div class="admin-card" onclick="alert('User management page coming soon!')">
                <div class="admin-card-header">
                    <div class="admin-card-icon">üë•</div>
                    <div class="admin-card-title">User Management</div>
                </div>
                <div class="admin-card-description">
                    View and manage user accounts. Monitor activity, grant admin access, and moderate users.
                </div>
                <div class="admin-card-stats">
                    <div class="admin-stat">
                        <div class="admin-stat-value" id="total-users">-</div>
                        <div class="admin-stat-label">Total Users</div>
                    </div>
                    <div class="admin-stat">
                        <div class="admin-stat-value" id="active-users">-</div>
                        <div class="admin-stat-label">Active</div>
                    </div>
                </div>
            </div>

            <!-- Achievement Management -->
            <a href="admin-achievements.html" class="admin-card">
                <div class="admin-card-header">
                    <div class="admin-card-icon">üèÜ</div>
                    <div class="admin-card-title">Achievements</div>
                </div>
                <div class="admin-card-description">
                    Create and manage achievements. Set unlock criteria, rewards, and rarity levels.
                </div>
                <div class="admin-card-stats">
                    <div class="admin-stat">
                        <div class="admin-stat-value" id="total-achievements">-</div>
                        <div class="admin-stat-label">Total</div>
                    </div>
                    <div class="admin-stat">
                        <div class="admin-stat-value" id="hidden-achievements">-</div>
                        <div class="admin-stat-label">Hidden</div>
                    </div>
                </div>
            </a>

            <!-- Platform Stats -->
            <div class="admin-card" onclick="alert('Analytics page coming soon!')">
                <div class="admin-card-header">
                    <div class="admin-card-icon">üìä</div>
                    <div class="admin-card-title">Platform Analytics</div>
                </div>
                <div class="admin-card-description">
                    View platform statistics, user engagement metrics, and performance insights.
                </div>
                <div class="admin-card-stats">
                    <div class="admin-stat">
                        <div class="admin-stat-value" id="total-quizzes">-</div>
                        <div class="admin-stat-label">Quizzes Taken</div>
                    </div>
                    <div class="admin-stat">
                        <div class="admin-stat-value">-</div>
                        <div class="admin-stat-label">Avg Score</div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Recent Activity (placeholder) -->
        <div class="card" style="margin-top: 30px;">
            <h2>üìà Recent Activity</h2>
            <p style="color: #999; text-align: center; padding: 40px 0;">
                Activity feed coming soon...
            </p>
        </div>
    </div>

    <script type="module">
        import { ENDPOINTS } from './js/config.js';

        // Check if user is admin
        async function checkAdminAccess() {
            console.log('üîê Admin page: Checking admin access...');
            const token = localStorage.getItem('token');

            if (!token) {
                console.log('‚ùå Admin page: No token found, redirecting to login');
                window.location.href = 'login.html';
                return;
            }

            console.log('‚úì Admin page: Token found, checking with API...');

            try {
                const response = await fetch(ENDPOINTS.ME, {
                    headers: {
                        'Authorization': `Bearer ${token}`
                    }
                });

                console.log('üì° Admin page: API response status:', response.status);

                if (!response.ok) {
                    throw new Error('Authentication failed');
                }

                const data = await response.json();
                console.log('üì¶ Admin page: User data received:', data);
                console.log('üîë Admin page: is_admin =', data.is_admin);

                // Check if user is admin
                if (!data.is_admin) {
                    console.log('‚ùå Admin page: User is NOT admin, redirecting...');
                    alert('Access denied. Admin privileges required.');
                    window.location.href = 'dashboard.html';
                    return;
                }

                console.log('‚úÖ Admin page: User IS admin! Access granted.');

                // Update admin badge with username
                document.getElementById('admin-badge').textContent = `ADMIN: ${data.username}`;

            } catch (error) {
                console.error('‚ùå Admin page: Auth error:', error);
                localStorage.removeItem('token');
                window.location.href = 'login.html';
            }
        }

        // Load admin stats
        async function loadAdminStats() {
            const token = localStorage.getItem('token');

            try {
                // Get question stats
                const questionsResponse = await fetch(`${ENDPOINTS.ADMIN_QUESTIONS}?page=1&page_size=1`, {
                    headers: { 'Authorization': `Bearer ${token}` }
                });

                if (questionsResponse.ok) {
                    const questionsData = await questionsResponse.json();
                    document.getElementById('total-questions').textContent = questionsData.total || 0;
                }

                // Get achievement stats
                const achievementsResponse = await fetch(ENDPOINTS.ADMIN_ACHIEVEMENTS, {
                    headers: { 'Authorization': `Bearer ${token}` }
                });

                if (achievementsResponse.ok) {
                    const achievementsData = await achievementsResponse.json();
                    document.getElementById('total-achievements').textContent = achievementsData.total || 0;
                    const hidden = achievementsData.achievements.filter(a => a.is_hidden).length;
                    document.getElementById('hidden-achievements').textContent = hidden;
                }

                // Get user stats
                const usersResponse = await fetch(`${ENDPOINTS.ADMIN_USERS}?page=1&page_size=1`, {
                    headers: { 'Authorization': `Bearer ${token}` }
                });

                if (usersResponse.ok) {
                    const usersData = await usersResponse.json();
                    document.getElementById('total-users').textContent = usersData.total || 0;
                }

                // Get exam types (approximate)
                document.getElementById('total-exams').textContent = '4';

            } catch (error) {
                console.error('Error loading stats:', error);
            }
        }

        // Logout handler
        document.getElementById('nav-logout').addEventListener('click', function() {
            localStorage.removeItem('token');
            window.location.href = 'login.html';
        });

        // Refresh stats button
        document.getElementById('refresh-stats').addEventListener('click', loadAdminStats);

        // Initialize
        checkAdminAccess();
        loadAdminStats();
    </script>
</body>
</html>
