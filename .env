# ==============================================
# ENVIRONMENT CONFIGURATION
# ==============================================
# IMPORTANT: Never commit this file to git!
# This file contains secrets and credentials.
#
# For setup instructions, see .env.example
# ==============================================

# ---------------------------------------------
# DATABASE CONFIGURATION
# ---------------------------------------------
# PostgreSQL connection string format:
# postgresql://username:password@host:port/database
#
# Development: Use the default postgres user with secure password
# Production: Create a dedicated database user with limited permissions
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/billings

# ---------------------------------------------
# JWT AUTHENTICATION CONFIGURATION
# ---------------------------------------------
# Secret key for signing JWT tokens
# CRITICAL: This must be kept secret! Anyone with this key can forge auth tokens
# Generated using: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET=pmJlyI4Bmq6z9dNmgJ9SxYHKG9NEMTyqLtm946p37Yc

# JWT token expiration time in minutes
# 15 minutes is a secure default for development
# Production: Consider shorter expiration (5-10 min) with refresh token strategy
JWT_EXPIRATION_MINUTES=15

# ---------------------------------------------
# DOCKER POSTGRES CONFIGURATION
# ---------------------------------------------
# Used by docker-compose.yml for PostgreSQL container
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=billings

# ---------------------------------------------
# PGADMIN CONFIGURATION
# ---------------------------------------------
# Web-based PostgreSQL admin tool credentials
# Access at: http://localhost:5050
PGADMIN_DEFAULT_EMAIL=admin@admin.com
PGADMIN_DEFAULT_PASSWORD=admin
